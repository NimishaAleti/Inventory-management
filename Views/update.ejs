  <body style="background-color:#ffe6e6;">
    <div class="container">
      <h2>Add a New Product</h2>
      <form class="form-horizontal" action="/AddData" method="POST" >
        <div class="form-group">
          <label class="control-label col-sm-2" for="Product-Id">Product-Id:</label>
          <div class="col-sm-10">
            <input type="number" class="form-control" id="prod_cat" placeholder="Enter Product-Id" name="prod_id">
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-2" for="Product-Type">Product-Type:</label>
          <div class="col-sm-10">          
            <input type="text" class="form-control" id="type" placeholder="Enter product type" name="prod_type">
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-2" for="product-colour">Product-Colour:</label>
          <div class="col-sm-10">          
            <input type="text" class="form-control" id="type" placeholder="Enter Product-Colour" name="prod_col">
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-2" for="product-size">Product-Size:</label>
          <div class="col-sm-10">          
            <input type="text" class="form-control" id="type" placeholder="Enter product-Size" name="prod_size">
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-2" for="product-stock">Product-Stock:</label>
          <div class="col-sm-10">          
            <input type="number" class="form-control" id="type" placeholder="Enter Product-Stock" name="stock">
          </div>
        </div>

    
    
    
    <button type="Submit">Submit</button>

    </form>
